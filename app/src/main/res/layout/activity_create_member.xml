<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hana.hana.Activities.CreateMemberActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_action_toolbar_createmember"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/memberBackgrounlyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >


            <ImageView
                android:id="@+id/background_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="멤버의 번호"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/memberIdTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/frame_textview"
                    android:gravity="center"
                    android:hint="학번 또는 사번을 입력해주세요"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="멤버의 이름"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/memberNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/frame_textview"
                    android:gravity="center"
                    android:hint="이름을 입력 해 주세요"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="멤버의 전화번호"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/memberPhoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/frame_textview"
                    android:gravity="center"
                    android:hint="ex)010-2591-5997"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="멤버의 레벨"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/memberLevelTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/frame_textview"
                    android:gravity="center"
                    android:hint="ex)24기, 학부생, 사원"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryTextInv"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_line" />
                <Button
                    android:id="@+id/createMemberBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/frame_button_white_stroke"
                    android:text="멤버 추가하기"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryTextInv" />

            </LinearLayout>

        </FrameLayout>

    </ScrollView>
</LinearLayout>
